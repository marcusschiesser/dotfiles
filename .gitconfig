[user]
	name = Marcus Schiesser
	email = mail@marcusschiesser.de
[push]
	default = simple
	autoSetupRemote = true
[pack]
	windowMemory = 512m
[core]
	autocrlf = input
	pager = delta
[pull]
	rebase = true
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
